{
	"easycom": {
    "autoscan": true,
    "custom": {
      "^nut-(.*)?-(.*)": "uniapp-nutui/components/$1$2/$1$2.vue",
      "^nut-(.*)": "uniapp-nutui/components/$1/$1.vue"
    }
  },
	"pages": [
		//pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "阿中蛋糕DIY"
			}
		},
		{
			"path": "pages/scan/scan",
			"style": {
				"navigationBarTitleText": "阿中蛋糕DIY-扫码"
			}
		},
		{
			"path": "pages/mine/mine",
			"style": {
				"navigationBarTitleText": "阿中蛋糕DIY-我的"
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "阿中蛋糕DIY",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"color": "#7d7e80",
		"selectedColor": "#3c9cff",
		"borderStyle": "black",
		"backgroundColor": "#ffffff",
		"height": "50px",
		"fontSize": "10px",
		"iconWidth": "25px",
		"spacing": "3px",
		"list": [
			{
				"pagePath": "pages/index/index",
				"iconPath": "static/icon/home.png",
				"selectedIconPath": "static/icon/home1.png",
				"text": "首页"
			},
			{
				"pagePath": "pages/scan/scan",
				"iconPath": "static/icon/scan.png",
				"selectedIconPath": "static/icon/scan1.png",
				"text": "扫码"
			},
			{
				"pagePath": "pages/mine/mine",
				"iconPath": "static/icon/user.png",
				"selectedIconPath": "static/icon/user1.png",
				"text": "我的"
			}
		]
	},
	"uniIdRouter": {}
}
